# Example environment configuration for integration tests

# Service endpoints
SERVICE_HOST=localhost
SERVICE_HTTP_PORT=8001
SERVICE_GRPC_PORT=9001
SERVICE_METRICS_PORT=9002

# Database configuration
TEST_DB_HOST=localhost
TEST_DB_PORT=5433
TEST_DB_USER=test_user
TEST_DB_PASSWORD=test_password
TEST_DB_NAME=driver_service_test

# Redis configuration
REDIS_HOST=localhost
REDIS_PORT=6380
REDIS_DB=0
REDIS_PASSWORD=

# NATS configuration
NATS_URL=nats://localhost:4222
NATS_CLUSTER_ID=driver-service-cluster
NATS_CLIENT_ID=python-test-client

# Test configuration
TEST_TIMEOUT=30
TEST_WORKERS=4
CLEANUP_AFTER_TEST=true

# Docker configuration
USE_DOCKER=true
DOCKER_COMPOSE_FILE=docker-compose.integration-tests.yml

# Logging configuration
LOG_LEVEL=INFO
LOG_FORMAT=json